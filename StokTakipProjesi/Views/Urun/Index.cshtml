@model List<Urun>

@{
    ViewData["Title"] = "Ürünler";
}

<h2>Ürün Listesi</h2>

<p><a class="btn btn-primary" href="/Urun/Ekle">Yeni Ürün Ekle</a></p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Stok</th>
            <th>Fiyat (₺)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <td>@urun.Id</td>
                <td>@urun.Ad</td>
                <td>@urun.Stok</td>
                <td>@urun.Fiyat</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Urun/Guncelle/@urun.Id">Güncelle</a>
                    <a class="btn btn-sm btn-danger" href="/Urun/Sil/@urun.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
